<!--
including header content which is common for all pages
-->
<%- include ../layouts/header.ejs %>
 
<% if (messages.error) { %>
    <p style="color:red"><%- messages.error %></p>
<% } %>
 
<% if (messages.success) { %>
    <p style="color:green"><%- messages.success %></p>
<% } %>    
 <div class="container" style="margin-top: 40px;">
<table class="table table-hover" width='80%' border=0>
    <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Email</th>
        <th>Action</th>
    </tr>
    
    <!--
        Using FOREACH LOOP for the users array
        
        myArray.forEach(function(el, index) {
            // el - current element, i - index
        });
    -->
    <% if (data) { %>
    <% data.forEach(function(user){ %>
        <tr>
            <td><%= user.name %></td>
            <td><%= user.age %></td>
            <td><%= user.email %></td>
            <td>
                <div style="float:left">
				<form action="/users/edit/<%= user.id %>" style="float:left;background-color: #4CAF50;">
					<input type="submit" value="Edit" style="background-color: #4CAF50;"/>
				</form>&nbsp; 
                                         
                    <form method="post" action="/users/delete/<%= user.id %>" style="float:right;background-color: #4CAF50;" >
                        <input type="submit" name="delete" value='Delete' onClick="return confirm('Are you sure you want to delete?')" style="background-color: red;" />
                        <input type="hidden" name="_method" value="DELETE" style="background-color: #4CAF50;" />
                    </form>
                </div>
            </td>
        </tr>
    <% }) %>
    <% } %>
 
</table>
</div>
 
<!--
including footer content which is common for all pages
-->
<%- include ../layouts/footer.ejs %>